  "css": "/* Delivery Note QR Approval Styles */\n.delivery-note-qr {\n  font-family: Arial, sans-serif;\n  line-height: 1.4;\n}\n\n.approval-section {\n  background: linear-gradient(135deg, #f8f9ff 0%, #e3f2fd 100%);\n  border-radius: 8px;\n  padding: 15px;\n}\n\n.status-indicator {\n  display: inline-block;\n  padding: 4px 8px;\n  border-radius: 4px;\n  font-size: 10px;\n  font-weight: bold;\n  text-transform: uppercase;\n}\n\n.status-pending {\n  background: #fff3cd;\n  color: #856404;\n  border: 1px solid #ffeaa7;\n}\n\n.status-approved {\n  background: #d4edda;\n  color: #155724;\n  border: 1px solid #c3e6cb;\n}\n\n.status-rejected {\n  background: #f8d7da;\n  color: #721c24;\n  border: 1px solid #f5c6cb;\n}\n\n.qr-highlight {\n  border: 2px solid #007bff;\n  border-radius: 6px;\n  box-shadow: 0 2px 8px rgba(0, 123, 255, 0.2);\n}\n\n@media print {\n  .approval-section {\n    background: #f8f9ff !important;\n    -webkit-print-color-adjust: exact;\n  }\n  \n  .qr-highlight {\n    border: 2px solid #000 !important;\n  }\n}"
